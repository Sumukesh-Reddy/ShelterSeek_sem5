<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Hosts</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: "Poppins", sans-serif;
      background: linear-gradient(135deg, #dbeafe, #fef9c3);
      color: #c25182;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    /* 🌟 Container */
    .container {
      width: 100%;
      max-width: 1100px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(20px);
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      padding: 30px;
      overflow: hidden;
      animation: fadeIn 0.6s ease-in-out;
    }

    /* 🌟 Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      flex-wrap: wrap;
      gap: 10px;
    }
    .header h1 {
      font-size: 28px;
      color: #0f172a;
      font-weight: 700;
    }
    .subtitle {
      font-size: 14px;
      color: #475569;
    }
    #back_admin {
      background: #d72d6e;
      color: #fff;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      font-size: 14px;
      cursor: pointer;
      transition: 0.3s;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    #back_admin:hover {
      background: #d72d6e;
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(183, 70, 156, 0.4);
    }

    /* 🌟 Search */
    .search-section {
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
    }
    .pill-search-container {
      flex: 1;
      display: flex;
      position: relative;
    }
    .pill-input {
      flex: 1;
      padding: 12px 20px;
      border: 2px solid #e2e8f0;
      border-radius: 30px;
      outline: none;
      transition: 0.3s;
      font-size: 15px;
    }
    .pill-input:focus {
      border-color: #d72d6e;
      box-shadow: 0 0 0 3px rgba(238, 49, 181, 0.2);
    }
    .pill-button {
      position: absolute;
      right: 8px;
      top: 50%;
      transform: translateY(-50%);
      background:#d72d6e;
      color: white;
      border: none;
      border-radius: 50%;
      width: 38px;
      height: 38px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: 0.3s;
    }
    .pill-button:hover {
      background: #d72d6e;
      transform: translateY(-50%) scale(1.1);
    }

    .results-info {
      font-size: 14px;
      color: #475569;
      background: #f1f5f9;
      padding: 6px 14px;
      border-radius: 20px;
    }

    /* 🌟 Table */
    table {
      width: 100%;
      border-collapse: collapse;
      border-radius: 12px;
      overflow: hidden;
      background: #fff;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }
    thead {
      background: linear-gradient(90deg, #d72d6e, #d72d6e);
      color: #fff;
    }
    th, td {
      padding: 15px 18px;
      text-align: left;
      font-size: 15px;
    }
    tbody tr {
      border-bottom: 1px solid #e2e8f0;
      transition: 0.2s;
    }
    tbody tr:hover {
      background: #f9fafb;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }
    td {
      color: #334155;
    }
    .host-name {
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    /* 🌟 Actions */
    .actions {
      display: flex;
      gap: 8px;
    }
    .btn-view {
      background: #b7245f;
      color: #fff;
      padding: 8px 14px;
      border-radius: 6px;
      text-decoration: none;
      font-size: 14px;
      display: inline-flex;
      align-items: center;
      gap: 5px;
      transition: 0.3s;
    }
    .btn-view:hover {
      background: #7e1542;
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(16, 185, 129, 0.3);
    }

    /* 🌟 No Data */
    .no-data {
      text-align: center;
      padding: 40px 20px;
      color: #64748b;
    }
    .no-data i {
      font-size: 40px;
      margin-bottom: 10px;
      color: #94a3b8;
    }

    /* 🌟 Animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div>
        <h1>Hosts Management</h1>
        <p class="subtitle">Track hosts and their rooms easily</p>
      </div>
      <button id="back_admin" onclick="window.location.href='/admin_dashboard'">
        <i class="fa-solid fa-arrow-left"></i> Back
      </button>
    </div>

    <div class="search-section">
      <div class="pill-search-container">
        <input type="text" id="searchInput" class="pill-input" placeholder="Search hosts by name..." />
        <button id="searchToggle" class="pill-button">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
      <div class="results-info">
        <span id="resultCount"><%= hosts ? hosts.length : 0 %> hosts found</span>
      </div>
    </div>

    <% if (hosts && hosts.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Host Name</th>
            <th>No. of Rooms</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% hosts.forEach(host => { %>
            <tr data-user-id="<%= host._id %>">
              <td data-label="Host Name">
                <div class="host-name">
                  <i class="fa-solid fa-user"></i>
                  <%= host.name || 'N/A' %>
                </div>
              </td>
              <td data-label="No. of Rooms"><%= host.roomCount || 0 %></td>
              <td data-label="Actions">
                <div class="actions">
                  <a href="/hosts/<%= host._id %>/map" class="btn-view">
                    <i class="fa-solid fa-map"></i> View Map
                  </a>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="no-data">
        <i class="fa-solid fa-user-slash"></i>
        <p>No hosts found</p>
      </div>
    <% } %>
  </div>

  <script>
    // 🔍 Client-side search
    document.getElementById("searchInput").addEventListener("keyup", function() {
      const filter = this.value.toLowerCase();
      const rows = document.querySelectorAll("tbody tr");
      let visibleCount = 0;

      rows.forEach(row => {
        const name = row.cells[0].textContent.toLowerCase();
        if (name.includes(filter)) {
          row.style.display = "";
          visibleCount++;
        } else {
          row.style.display = "none";
        }
      });

      document.getElementById("resultCount").textContent = `${visibleCount} hosts found`;
    });
  </script>
</body>
</html>
