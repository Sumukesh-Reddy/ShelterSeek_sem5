<script>
    async function fetchUserCounts() {
    try {
        const response = await fetch('/api/user-counts');
        const data = await response.json();
        if(data.success){
            animateCount('traveler-count', data.travelerCount);
            animateCount('host-count', data.hostCount);
        } 
        else{
            document.getElementById('traveler-count').textContent='10,000+';
            document.getElementById('host-count').textContent='5,000+';
        }
    } 
    catch(error){
        console.error('Error fetching user counts:', error);
        document.getElementById('traveler-count').textContent = '10,000+';
        document.getElementById('host-count').textContent = '5,000+';
    }
}
function animateCount(elementId, targetNumber) {
    const element = document.getElementById(elementId);
    const duration = 2000; 
    const frameRate = 30; 
    const totalFrames = duration / (1000 / frameRate);
    const increment = targetNumber / totalFrames;
    let currentNumber = 0;   
    const timer = setInterval(() => {
        currentNumber += increment;
        if (currentNumber >= targetNumber) {
            clearInterval(timer);
            currentNumber = targetNumber;
        }
        element.textContent = Math.round(currentNumber).toLocaleString() + '+';
    }, 1000 / frameRate);
}
document.addEventListener('DOMContentLoaded', fetchUserCounts);</script>
