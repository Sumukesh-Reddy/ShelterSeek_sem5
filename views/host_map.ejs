<!DOCTYPE html>
<html>
<head>
  <title>Host Rooms Map</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background: #f3f4f6;
    }

    h1 {
      text-align: center;
      padding: 20px;
      margin: 0;
      background: #d72d6e;
      color: white;
      font-size: 24px;
      font-weight: 600;
    }

    /* üîç Search Bar */
    .search-container {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      margin: 12px auto;
      padding: 0 20px;
      max-width: 600px;
    }
    .search-input {
      flex: 1;
      padding: 10px 15px;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 14px;
      outline: none;
      transition: 0.3s;
    }
    .search-input:focus {
      border-color: #d72d6e;
      box-shadow: 0 0 0 3px rgba(210, 67, 155, 0.2);
    }
    .search-btn {
      background: #d72d6e;
      border: none;
      color: white;
      padding: 10px 15px;
      border-radius: 8px;
      cursor: pointer;
      transition: 0.3s;
    }
    .search-btn:hover {
      background: #d72d6e;
      transform: translateY(-2px);
    }

    #map {
      height: 85vh;
      width: 100%;
    }

    /* Leaflet popup custom style */
    .leaflet-popup-content {
      margin: 0 !important;
      padding: 0 !important;
    }

    .popup-card {
      font-size: 13px;
      max-width: 300px;
      max-height: 300px;
      overflow-y: auto;
      padding: 12px;
      border-radius: 10px;
      background: #ffffff;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      line-height: 1.4;
    }

    .popup-card h3 {
      margin: 0 0 5px;
      font-size: 16px;
      color: #d72d6e;
      font-weight: 600;
    }

    .popup-section {
      margin-bottom: 8px;
    }

    .popup-section strong {
      color: #111827;
    }

    .popup-images {
      display: flex;
      gap: 6px;
      overflow-x: auto;
      margin-top: 8px;
      padding-bottom: 5px;
    }

    .popup-images img {
      width: 70px;
      height: 50px;
      object-fit: cover;
      border-radius: 6px;
      flex-shrink: 0;
    }

    .popup-footer {
      font-size: 11px;
      color: #6b7280;
      margin-top: 5px;
      border-top: 1px solid #e5e7eb;
      padding-top: 5px;
    }
  </style>
</head>
<body>
  <h1>Host Rooms Map</h1>

  <!-- üîç Search -->
  <div class="search-container">
    <input type="text" id="searchInput" class="search-input" placeholder="Search room by name..." />
    <button id="searchBtn" class="search-btn">Search</button>
  </div>

  <div id="map"></div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    const rooms = <%- JSON.stringify(rooms) %>;

    if (!rooms.length) {
      document.getElementById("map").innerHTML = "<p style='text-align:center; margin-top:20px;'>No rooms found for this host.</p>";
    } else {
      const map = L.map("map").setView([20, 78], 5);

      L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
        attribution: "¬© OpenStreetMap contributors"
      }).addTo(map);

      const markers = [];

      rooms.forEach(room => {
        if (room.coordinates && room.coordinates.lat && room.coordinates.lng) {
          const popupContent = `
            <div class="popup-card">
              <h3>${room.title || "Untitled Room"}</h3>
              <div class="popup-section"><strong>Host:</strong> ${room.name || "N/A"} (${room.email || ""})</div>
              <div class="popup-section"><strong>Description:</strong> ${room.description || "No description"}</div>
              <div class="popup-section"><strong>Price:</strong> ‚Çπ${room.price || "N/A"}</div>
              <div class="popup-section"><strong>Location:</strong> ${room.location || "Not specified"}</div>
              <div class="popup-section"><strong>Type:</strong> ${room.propertyType || "N/A"} / ${room.roomType || "N/A"}</div>
              <div class="popup-section"><strong>Capacity:</strong> ${room.capacity || "N/A"} guests</div>
              <div class="popup-section"><strong>Bedrooms:</strong> ${room.bedrooms || 0}, <strong>Beds:</strong> ${room.beds || 0}</div>
              <div class="popup-section"><strong>Size:</strong> ${room.roomSize || "N/A"}</div>
              <div class="popup-section"><strong>Transport Distance:</strong> ${room.transportDistance || "N/A"}</div>
              <div class="popup-section"><strong>Host Gender:</strong> ${room.hostGender || "N/A"}</div>
              <div class="popup-section"><strong>Food Facility:</strong> ${room.foodFacility || "N/A"}</div>
              <div class="popup-section"><strong>Status:</strong> ${room.status || "pending"}</div>
              <div class="popup-section"><strong>Booking Enabled:</strong> ${room.booking ? "Yes" : "No"}</div>
              <div class="popup-section"><strong>Discount:</strong> ${room.discount || 0}%</div>
              <div class="popup-section"><strong>Likes:</strong> ${room.likes || 0}</div>
              <div class="popup-section"><strong>Amenities:</strong> ${(room.amenities && room.amenities.length > 0) ? room.amenities.join(", ") : "N/A"}</div>
              ${room.images && room.images.length > 0 ? `
                <div class="popup-images">
                  ${room.images.map(imgId => `<img src="/api/images/${imgId}" />`).join("")}
                </div>` : ""}
              ${room.reviews && room.reviews.length > 0 ? `<div class="popup-section"><strong>Reviews:</strong><br>${room.reviews.join("<br>")}</div>` : ""}
              <div class="popup-footer">Created: ${new Date(room.createdAt).toLocaleDateString()}</div>
            </div>
          `;

          const marker = L.marker([room.coordinates.lat, room.coordinates.lng])
            .addTo(map)
            .bindPopup(popupContent, { maxWidth: 320 });

          marker.roomName = (room.title || "").toLowerCase(); // for searching
          markers.push(marker);
        }
      });

      if (markers.length > 0) {
        const group = L.featureGroup(markers);
        map.fitBounds(group.getBounds().pad(0.2));
      }

      // üîç Search functionality
      const searchInput = document.getElementById("searchInput");
      const searchBtn = document.getElementById("searchBtn");

      function searchRoom() {
        const query = searchInput.value.toLowerCase().trim();
        if (!query) return;

        let found = false;
        markers.forEach(marker => {
          if (marker.roomName.includes(query)) {
            map.setView(marker.getLatLng(), 15, { animate: true });
            marker.openPopup();
            found = true;
          }
        });

        if (!found) {
          alert("No room found with that name.");
        }
      }

      searchBtn.addEventListener("click", searchRoom);
      searchInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") searchRoom();
      });
    }
  </script>
</body>
</html>
